      <section id="section_GPGPU_Fabric_Application_8jnm7ya6b" class="- topic/section " status="unchanged" xtrf="C:\Git\XDocs-DITA-OT-185\XDocs-DITA-OT-185\DITA-OT1.8.5\samples\diffed\_b-0-file-\COMMON\Appnotes\Application_Examples\trident_application_examples.xml" xtrc="section:7;198:35">
